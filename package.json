{
  "name": "@fabrix/spool-errors",
  "version": "1.6.2",
  "description": "Spool: Standard Errors for Fabrix as a spool",
  "homepage": "https://fabrix.app",
  "author": {
    "name": "scott-wyatt",
    "email": "scottwyatt86@gmail.com",
    "url": "https://cali-style.com"
  },
  "keywords": [
    "html",
    "joi",
    "errors",
    "spool",
    "fabrix",
    "trailjs"
  ],
  "scripts": {
    "release": "standard-version",
    "build": "tsc -p ./lib/tsconfig.release.json",
    "lint": "tslint -p ./lib",
    "watch": "tsc -w -p ./lib/tsconfig.release.json",
    "test": "npm run clean && npm run lint && npm run build && nyc mocha",
    "test:build:docs": "rimraf docs && typedoc --options typedoc.json lib/",
    "prepublishOnly": "npm run compile",
    "compile": "npm run clean && npm run build",
    "clean": "rm -rf dist",
    "ci": "cd .. && ci"
  },
  "main": "dist/index.js",
  "typings": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "pre-commit": [
    "test"
  ],
  "dependencies": {
    "joi": "^14.3.1"
  },
  "devDependencies": {
    "@fabrix/fabrix": "^1.6.4",
    "@fabrix/lint": "^1.0.0-alpha.3",
    "@types/node": "~12.7.9",
    "mocha": "^10.2.0",
    "nyc": "^14.1.1",
    "smokesignals": "^3.0.4",
    "source-map-support": "^0.5.13",
    "standard-version": "^7.0.0",
    "supertest": "^4.0.2",
    "tslib": "~1.9.0",
    "tslint": "~5.14.0",
    "tslint-microsoft-contrib": "~6.1.0",
    "tsutils": "~3.9.1",
    "typedoc": "^0.15.0",
    "typedoc-plugin-markdown": "^2.2.7",
    "typescript": "~3.3.4000"
  },
  "peerDependencies": {
    "@fabrix/fabrix": "^1.6.4"
  },
  "engines": {
    "node": ">= 7.6.0",
    "npm": ">= 3.10.0"
  },
  "repository": "git@github.com:fabrix-app/spool-errors.git",
  "license": "MIT"
}
